@model UploadFileVm

<h2>Convert and Merge Video</h2>

<form asp-action="ConvertAndMerge" asp-controller="Video" method="post" enctype="multipart/form-data">
    <div class="form-group">
        <label for="file">Select Video File 1</label>
        <input type="file" class="form-control-file" id="file" name="File">
        <input type="hidden" asp-for="MergeFiles" />
    </div>
    <div class="form-group">
        <label for="file">Select Video File 2</label>
        <input type="file" class="form-control-file" id="file" name="File1">
    </div>
    <div class="form-group">
        <label for="file">Select Video File 3</label>
        <input type="file" class="form-control-file" id="file" name="File2">
    </div>
    <button type="submit" class="btn btn-primary">Convert to MP4</button>
</form>
